%h1.sem-adorno 
	= link_to @category.name, "/galeria/#{@category.permalink}"
	%span.tag
		= "/ #{@tag.name}" unless @tag.blank?
.painel
	.tags
		= render "shared/tags"
	.fotos
		- unless @fotos.blank?
			- for produto in @fotos
				= link_to produto.photo_url(:big), :class => "foto-produto fancy" do
					= image_tag produto.photo_url(:thumb), "data-tooltip" => produto.hint, :alt => produto.keywords
		- else
			%p NÃ£o existem fotos deste produto no momento. #{link_to "Ver todas as #{@category.name.downcase}", "/galeria/#{@category.permalink}"}.